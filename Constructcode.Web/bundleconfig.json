[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    "inputFiles": [
      // Third party
      "wwwroot/lib/font-awesome/css/font-awesome.css",
      "wwwroot/lib/bootstrap/dist/css/bootstrap.css",
      "wwwroot/lib/ng-dialog/css/ngDialog.css",
      "wwwroot/lib/ng-dialog/css/ngDialog-theme-default.css",

      // Site Specific
      "wwwroot/styles/_reset.css",
      "wwwroot/styles/site.css",
      "wwwroot/styles/common/**/*.css",
      "wwwroot/styles/admin/**/*.css",
      "wwwroot/styles/pages/**/*.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      // Third Party
      "wwwroot/lib/tether/dist/js/tether.js",
      "wwwroot/lib/jquery/dist/jquery.js",
      "wwwroot/lib/bootstrap/dist/js/bootstrap.js",
      "wwwroot/lib/angular/angular.js",
      "wwwroot/lib/angular-sanitize/angular-sanitize.js",
      "wwwroot/lib/ng-dialog/js/ngDialog.js",
      "wwwroot/lib/tinymce/tinymce.js",
      "wwwroot/lib/angular-ui-tinymce/dist/tinymce.min.js",

      // app
      "wwwroot/js/*js",

      "wwwroot/js/account/**/*.js",
      "wwwroot/js/admin/**/*.js",
      "wwwroot/js/config/**/*.js",
      "wwwroot/js/core/**/*.js",
      "wwwroot/js/frontpage/**/*.js",
      "wwwroot/js/image/**/*.js",
      "wwwroot/js/post/**/*.js"
    ],
    "minify": {
      "enabled": true
    },
    "sourceMap": false
  }
]