@model Constructcode.Web.Controllers.ViewModels.DisplayPostsViewModel

@{
    ViewBag.Title = "Learn, Build and Improve";
    ViewBag.Description = "Construct Code contains posts about code, design and implementation.";
    ViewBag.AngularModule = "app";
    ViewBag.ShowFooter = true;
    ViewBag.Analytics = true;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="banner">
                <div class="banner-content">
                    @Html.Partial("_TopBanner")
                    <p>Learn, Build & Improve</p>
                </div>
            </div>
            <div class="frontpage-content">
                @Html.Partial("_DisplayPostList")
                @Html.Partial("_PageSwitcher")
            </div>
        </div>
    </div>
</div>
