@model Constructcode.Web.Controllers.ViewModels.DisplayPostsViewModel

@{
    ViewBag.Description = $"Page contains posts on the topic of {Model.CategoryName} - page {Model.CurrentPageNumber}";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="banner">
                <div class="banner-content">
                    @await Html.PartialAsync("_TopBanner")
                    <p>Learn, Build & Improve</p>
                </div>
            </div>
            <div class="frontpage-content">
                @await Html.PartialAsync("_DisplayPostList")
                <div class="page-switch col-md-12 col-sm-12">
                    <div class="col-md-4">
                        @if (Model.CurrentPageNumber != Model.MaxPageNumber)
                        {
                            <a href="/post/category/@Model.CategoryName/page/@Model.NextPageNumber">
                                <i class="fa fa-arrow-left"></i> Older Posts
                            </a>
                        }
                    </div>

                    <div class="col-md-4">
                        <p>Page @Model.CurrentPageNumber of @Model.MaxPageNumber</p>
                    </div>

                    <div class="col-md-4">
                        @if (Model.PreviousPageNumber != 0)
                        {
                            <a href="/post/category/@Model.CategoryName/page/@Model.PreviousPageNumber">
                                Newer Posts
                                <i class="fa fa-arrow-right"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>