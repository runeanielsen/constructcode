@{
    ViewBag.Title = "Edit Post";
}

<div class="row remove-body-content" ng-controller="EditPostController as vm" >
    <div id="wrapper post-container">
        @Html.Partial("Partial/_Sidemenu")
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <input type="text" name="title" ng-model="vm.post.title" class="title-createpost" placeholder="Title" />

                            <div class="form-group">
                                <div text-editor ng-model="vm.post.content"></div>
                            </div>

                            <button ng-click="vm.savePost()" class="btn btn-success">Save Post</button>
                            <button ng-click="vm.deletePost()" class="btn btn-danger">Delete Post</button>
                        </form>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>