@model Constructcode.Web.Controllers.ViewModels.DisplayPostsViewModel

@{
    ViewBag.Description = $"Construct Code contains post about code, design and implementations. There is a strong emphasis on examples and pictures to support the reader in understanding the subjects. - page {Model.CurrentPageNumber}";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="banner">
                <div class="banner-content">
                    @Html.Partial("_TopBanner")
                    <p>Learn, Build & Improve</p>
                </div>
            </div>
            <div class="frontpage-content">
                @Html.Partial("_DisplayPost")
                @Html.Partial("_PageSwitcher")
            </div>
        </div>
    </div>
</div>
