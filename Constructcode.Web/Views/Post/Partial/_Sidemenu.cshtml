<div id="sidebar-wrapper">
    <ul class="sidebar-nav">
        <li class="sidebar-brand">
            <a asp-controller="Admin" asp-action="Index" class="side-menu-item border-bottom">
                <i class="fa fa-home"></i>
                Admin Panel
            </a>
        </li>
        <li class="sidebar-brand">
            <a class="side-menu-item border-bottom" ng-init="vm.toggleCategories = false" ng-click="vm.toggleCategories = !vm.toggleCategories">
                <i class="fa fa-pencil"></i>
                Categories
                <i ng-class="vm.toggleCategories ? 'fa-chevron-up' : 'fa-chevron-down'" class="fa arrow"></i>
            </a>
            <ul ng-show="vm.toggleCategories" class="toggle-list list-unstyled">
                <li ng-repeat="category in vm.sideMenu.categories">
                    <input type="checkbox" ng-model="category.selected" />
                    <p class="inline" ng-click="category.selected = !category.selected">{{category.title}}</p>
                </li>
                <li>
                    <a class="pointer" ng-click="vm.sideMenu.createCategory()">
                        <i class="fa fa-folder-open"></i>
                        New category
                    </a>
                </li>
            </ul>
        </li>
        <li class="sidebar-brand" ng-init="vm.toggleTags = false" ng-click="vm.toggleTags = !vm.toggleTags">
            <a class="side-menu-item border-bottom">
                <i class="fa fa-tag"></i>
                Tags
                <i ng-class="vm.toggleCategories ? 'fa-chevron-up' : 'fa-chevron-down'" class="fa arrow"></i>
            </a>
            <ul ng-show="vm.toggleTags" class="list-unstyled toggle-list">
                <li>Hello 1</li>
                <li>Hello 2</li>
                <li>Hello 3</li>
            </ul>
        </li>
    </ul>
</div>