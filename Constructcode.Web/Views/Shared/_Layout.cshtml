<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Construct Code</title>

    <environment names="Development">
        @*Third party*@
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/angular-toastr/dist/angular-toastr.css" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">
        <link rel="stylesheet" href="~/lib/ng-dialog/css/ngDialog.css" />
        <link rel="stylesheet" href="~/lib/ng-dialog/css/ngDialog-theme-default.css" />

        @*Site Specific*@
        <link rel="stylesheet" href="~/css/simple-sidebar.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
    </environment>

    <environment names="Staging,Production">
        @*Third party*@
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/angular-toastr/dist/angular-toastr.css" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">
        <link rel="stylesheet" href="~/lib/ng-dialog/css/ngDialog.css" />
        <link rel="stylesheet" href="~/lib/ng-dialog/css/ngDialog-theme-default.css" />

        @*Site Specific*@
        <link rel="stylesheet" href="~/css/simple-sidebar.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

</head>
<body ng-app="app" ng-cloak>
    <div class="body-content">
        <div class="container">
            @RenderBody()
            
            @if (ViewBag.ShowFooter != null && ViewBag.ShowFooter)
            {
                <footer>
                    <div class="footer-container row">
                        <div class="footer-content">
                            <p class="text-center">&copy; 2016 - Construct Code</p>
                        </div>
                    </div>
                </footer>
            }
        </div>
    </div>

    <environment names="Development">
        @*Third party*@
        <script src="~/lib/tether/dist/js/tether.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.js"></script>
        <script src="~/lib/ng-dialog/js/ngDialog.js"></script>
        <script src="~/lib/tinymce/tinymce.js"></script>
        <script src="~/lib/angular-ui-tinymce/src/tinymce.js"></script>

        @*Application*@
        <script src="~/js/app.js"></script>
        
        @*Directives*@
        <script src="~/js/image/file-input.directive.js"></script>

        @*Services*@
        <script src="~/js/post/services/post.service.js"></script>
        <script src="~/js/post/services/category.service.js"></script>
        <script src="~/js/api-config.service.js"></script>
        <script src="~/js/core/redirect.service.js"></script>
        <script src="~/js/core/url.service.js"></script>
        <script src="~/js/post/services/side-menu.service.js"></script>
        <script src="~/js/image/image.service.js"></script>
        <script src="~/js/config/tinymce-config.service.js"></script>

        @*Controllers*@
        <script src="~/js/admin/admin.controller.js"></script>
        <script src="~/js/post/controllers/create-post.controller.js"></script>
        <script src="~/js/post/controllers/edit-post.controller.js"></script>
        <script src="~/js/frontpage/frontpage.controller.js"></script>
        <script src="~/js/post/controllers/display-post.controller.js"></script>
        <script src="~/js/image/upload-image.controller.js"></script>
        <script src="~/js/post/controllers/post-on-category.controller.js"></script>
    </environment>

    <environment names="Staging,Production">
        @*Third party*@
        <script src="~/lib/tether/dist/js/tether.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/angular/angular.min.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.min.js"></script>
        <script src="~/lib/ng-dialog/js/ngDialog.min.js"></script>
        <script src="~/lib/tinymce/tinymce.min.js"></script>
        <script src="~/lib/angular-ui-tinymce/dist/tinymce.min.js"></script>

        @*Application*@
        <script src="~/js/app.js"></script>

        @*Directives*@
        <script src="~/js/image/file-input.directive.js"></script>

        @*Services*@
        <script src="~/js/post/services/post.service.js"></script>
        <script src="~/js/post/services/category.service.js"></script>
        <script src="~/js/api-config.service.js"></script>
        <script src="~/js/core/redirect.service.js"></script>
        <script src="~/js/core/url.service.js"></script>
        <script src="~/js/post/services/side-menu.service.js"></script>
        <script src="~/js/image/image.service.js"></script>
        <script src="~/js/config/tinymce-config.service.js"></script>

        @*Controllers*@
        <script src="~/js/admin/admin.controller.js"></script>
        <script src="~/js/post/controllers/create-post.controller.js"></script>
        <script src="~/js/post/controllers/edit-post.controller.js"></script>
        <script src="~/js/frontpage/frontpage.controller.js"></script>
        <script src="~/js/post/controllers/display-post.controller.js"></script>
        <script src="~/js/image/upload-image.controller.js"></script>
        <script src="~/js/post/controllers/post-on-category.controller.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
