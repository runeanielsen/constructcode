<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="content-language" content="en">
    <meta http-equiv="Cache-control" content="public">
    <meta name="description" content="@ViewData["Description"]">
    <meta name="msvalidate.01" content="3FCFD8C5E38D6B7A2B5A89C58A48F61F" />
    <title>@ViewData["Title"] - Construct Code</title>

    <link async href="~/site.min.css" rel="stylesheet" />

    @if (ViewBag.Analytics != null && ViewBag.Analytics)
    {
        <environment names="Staging, Production">
            <script>
                window.ga = window.ga || function () { (ga.q = ga.q || []).push(arguments) }; ga.l = +new Date;
                ga('create', 'UA-83257241-1', 'auto');
                ga('send', 'pageview');
            </script>
            <script async src='https://www.google-analytics.com/analytics.js'></script>
        </environment>
    }

</head>
<body ng-app="@ViewData["AngularModule"]" ng-cloak>
    <div>
        @RenderBody()

        @if (ViewBag.ShowFooter != null && ViewBag.ShowFooter)
            {
            <footer>
                <div class="container">
                    <div class="footer-container">
                        <div class="footer-content">
                            <p>&copy; 2017 - Construct Code</p>
                        </div>
                    </div>
                </div>
            </footer>
        }
    </div>

    <script src="~/lib.min.js"></script>
    <script src="~/site.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
