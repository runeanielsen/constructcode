<div ng-controller="DisplayPostController as vm">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <div class="banner-content">
                        @Html.Partial("_TopBanner")
                        <p>{{vm.post.title}}</p>
                    </div>
                </div>
                <div class="display-post-content">
                    <div class="section">
                        <div class="content">
                            <h2>{{vm.post.title}}</h2>
                            <p ng-bind-html="vm.trustAsHtml()"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>