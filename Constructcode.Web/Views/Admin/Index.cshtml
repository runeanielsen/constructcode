@{
    ViewBag.Title = "Admin";
}

<div ng-controller="AdminController as vm">
    <div>
        <div class="col-md-2 no-padding">
            @Html.Partial("_SideBarAdmin")
        </div>

        <div class="col-md-10">
            <div class="admin-container">
                <div class="admin-post-header col-md-12">
                    <div class="col-md-3">
                        <p>Name</p>
                    </div>
                    <div class="col-md-3">
                        <p>Categories</p>
                    </div>
                    <div class="col-md-3">
                        <p>Published</p>
                    </div>
                    <div class="col-md-3">
                        <p>Date</p>
                    </div>
                </div>
                <div class="admin-post col-md-12" ng-repeat="post in vm.posts">
                    <div class="col-md-3">
                        <a href="{{vm.redirect.editPost(post.id)}}">
                            <p>{{post.title}}</p>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <p class="inline" ng-repeat="category in post.categories">
                            {{category.title}}{{$last ? '' : ', '}}
                        </p>
                    </div>
                    <div class="col-md-3">
                        <p>{{post.published}}</p>
                    </div>
                    <div class="col-md-3">
                        <p>{{post.created}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
