@model IEnumerable<Constructcode.Web.ViewModels.PostViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row remove-body-content">
    <div id="wrapper post-container">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a asp-controller="Home" asp-action="Index" class="side-menu-item border-bottom"><i class="fa fa-globe"></i>Front page</a>
                </li>
                <li class="sidebar-brand">
                    <a asp-controller="Admin" asp-action="Index" class="side-menu-item border-bottom"><i class="fa fa-home"></i>Admin Panel</a>
                </li>
                <li class="sidebar-brand">
                    <a asp-controller="Post" asp-action="CreatePost" class="side-menu-item border-bottom"><i class="fa fa-pencil"></i>Create New Post</a>
                </li>
                <li class="sidebar-brand">
                    <a asp-controller="Post" asp-action="CreatePost" class="side-menu-item border-bottom"><i class="fa fa-user"></i>Manage Users</a>
                </li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @foreach (var post in Model)
                        {
                            <div class="admin-post">
                                <a asp-controller="Post" asp-action="EditPost" asp-route-id="@post.Id">
                                    <h3>@post.Title</h3>
                                </a>
                                <p>Created: @post.Created</p>
                                <div>
                                    @Html.Raw(post.Introduction)
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>