@model IEnumerable<Constructcode.Web.ViewModels.PostViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row remove-body-content">
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">Admin Panel</a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="CreatePost">Create Post</a>
                </li>
                <li>
                    <a href="#">Create Categories</a>
                </li>
                <li>
                    <a href="#">Overview</a>
                </li>
                <li>
                    <a href="#">Events</a>
                </li>
                <li>
                    <a href="#">About</a>
                </li>
                <li>
                    <a href="#">Services</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @foreach (var post in Model)
                        {
                            <div>
                                <a asp-controller="Admin" asp-action="EditPost" asp-route-id="@post.Id">
                                    <h3>@post.Title</h3>
                                </a>
                                <div>
                                    @Html.Raw(post.Introduction)
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>